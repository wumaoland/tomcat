<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans.xsd">

    <!--创建 Spring 的 SPI Bean-->
    <bean id="userFactoryServiceLoader" class="org.springframework.beans.factory.serviceloader.ServiceLoaderFactoryBean">
        <!--SPI 只关注 UserFactory，只从 classpath:/META-INF/services/org.lmmarise.ioc.java.beans.factory.UserFactory 文件中找实现类-->
        <property name="serviceType" value="org.lmmarise.ioc.java.beans.factory.UserFactory"/>
    </bean>


</beans>